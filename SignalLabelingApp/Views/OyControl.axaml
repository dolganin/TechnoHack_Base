<UserControl xmlns="https://github.com/avaloniaui"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:SignalLabelingApp.Views"
      x:Class="SignalLabelingApp.Views.OyControl">

    <UserControl.Resources>
        <local:CanvasSizeToLineGeometryConverter x:Key="CanvasSizeToLineGeometryConverter"/>
    </UserControl.Resources>

    <Border Background="#CCCCCC">
        <Grid ColumnDefinitions="Auto *"> 
            <Grid Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
                <TextBlock x:Name="MaxValue" HorizontalAlignment="Left" VerticalAlignment="Top"  Width="50" />
                <TextBlock x:Name="MiddleValue" HorizontalAlignment="Left" VerticalAlignment="Center" Width="50" />
                <TextBlock x:Name="MinValue" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="50" />
            </Grid>
            <Canvas x:Name="ArrowCanvas" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Path x:Name="ArrowPath" Stroke="Black" StrokeThickness="1" HorizontalAlignment="Right"/>
            </Canvas>
        </Grid> 
    </Border>
</UserControl>

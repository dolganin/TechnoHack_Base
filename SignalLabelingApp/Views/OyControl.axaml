<UserControl xmlns="https://github.com/avaloniaui"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:SignalLabelingApp.Views"
      x:Class="SignalLabelingApp.Views.OyControl">


    <Border Background="#EEE" BorderBrush="Black" BorderThickness="0 0 0 2">
        <Grid ColumnDefinitions="Auto *"> 
            <Grid Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
                <TextBlock x:Name="MaxValue" HorizontalAlignment="Left" VerticalAlignment="Top"  Width="50" FontSize="12" />
                <TextBlock x:Name="MiddleValue" HorizontalAlignment="Left" VerticalAlignment="Center" Width="50" FontSize="12" />
                <TextBlock x:Name="MinValue" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="50" FontSize="12"/>
            </Grid>
            <Canvas x:Name="ArrowCanvas" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Path x:Name="ArrowPath" Stroke="Black" StrokeThickness="2" HorizontalAlignment="Right"/>
            </Canvas>
        </Grid> 
    </Border>
</UserControl>

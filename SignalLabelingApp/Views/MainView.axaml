<UserControl xmlns="https://github.com/avaloniaui"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            x:Class="SignalLabelingApp.Views.MainView">
    <UserControl.Styles>
        <Style Selector="TextBlock">
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style Selector="TextBox">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style Selector="ComboBox">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style Selector="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#4CAF50"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,20,0,0"/>
        </Style>
        <Style Selector="Border">
            <Setter Property="CornerRadius" Value="10"/>
        </Style>
    </UserControl.Styles>
    <DockPanel LastChildFill="True">
        <!-- Меню (Menu bar) располагается под заголовком -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem x:Name="OpenFileMenuItem" Header="Open"/>
                <MenuItem x:Name="SaveMenuItem" Header="Save dataset"/>
                <MenuItem Header="Exit"/>
            </MenuItem>
            
            <MenuItem Header="_Edit">
                <MenuItem Header="Undo"/>
                <MenuItem Header="Redo"/>
            </MenuItem>
        </Menu>

        <!-- Левая панель для ввода данных и сохранения -->
        <Border Background="#F0F0F0" Margin="10" Opacity="0.9" CornerRadius="10">
            <StackPanel Width="320" Margin="10">
                <TextBlock Text="Class Number:" Margin="0,0,0,10" FontWeight="Bold"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Button x:Name="DecreaseClassNumberButton" Content="-" Width="30"/>
                    <TextBox x:Name="ClassNumberTextBox" Width="50" IsReadOnly="True" Text="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Button x:Name="IncreaseClassNumberButton" Content="+" Width="30"/>
                </StackPanel>
                
                <TextBlock Text="Markup Type:" Margin="0,0,0,10" FontWeight="Bold"/>
                <ComboBox x:Name="MarkupTypeComboBox" Margin="0,0,0,10">
                    <ComboBoxItem Content="Classification"/>
                    <ComboBoxItem Content="Detection"/>
                    <ComboBoxItem Content="Segmentation"/>
                </ComboBox>
                
                <TextBlock Text="Adaptive Size:" Margin="0,0,0,10" FontWeight="Bold"/>
                <TextBox x:Name="AdaptiveSizeTextBox" Margin="0,0,0,10"/>
                
                <Button x:Name="SaveButton" Content="Save"/>
            </StackPanel>
        </Border>

        <!-- Правая панель для списка меток (Created labels) -->
        <Border x:Name="CreatedLabelsBorder"
                DockPanel.Dock="Right"
                Background="#EEE"
                Padding="10"
                Width="250"
                Opacity="0.9">
            <ScrollViewer VerticalScrollBarVisibility="Visible">
                <StackPanel Orientation="Vertical" x:Name="CreatedLabels">
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Центральная область под редактор (Editor). -->
        <Grid>
            <Border x:Name="EditorZone" 
                Background="#FFF"
                Margin="10"
                Opacity="0.9">
            </Border>
        </Grid>
    </DockPanel>
</UserControl>